package Giris;

import java.util.Scanner;

public class IndexProgrami {
    public static void main(String[] args) {
        System.out.println("Vücüt Kitle index programına hoşgeldiniz.");
        System.out.print("Lütfen metre cinsinden boyunuzu giriniz:");
        Scanner scan=new Scanner(System.in);
        double boy= scan.nextDouble();
        System.out.print("Lütfen kilonuzu kilogram cinsinden giriniz:");
        int kilo=scan.nextInt();
        double index=kilo/(boy*boy);
        System.out.println(index);

    }
}
